<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAdmin.Pages.LoginPage"
             SizeChanged="OnSizeChanged"
             Title="LoginPage">

    <Grid>
        <Image Source="background.webp" Aspect="AspectFill"/>

        <Frame x:Name="DynamicFrame" BackgroundColor="{StaticResource TestColor04}" Margin="30,20" MaximumWidthRequest="400" MaximumHeightRequest="320">
            <StackLayout>
                <Label Text="Iniciar Sesión" HorizontalOptions="Center" FontAttributes="Bold" FontSize="20"/>
                <Entry x:Name="UserEntry" Placeholder="Usuario"></Entry>
                <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"></Entry>
                <Button Clicked="OnLoginButtonClicked" Text="Iniciar Sesións" Margin="0,15" TextColor="{StaticResource TestColor08}" BackgroundColor="{StaticResource TestColor07}" />
                <Button Clicked="OnAuthClicked" Text="Recuperar Usuario con Huella" TextColor="{StaticResource White}" BackgroundColor="{StaticResource TestColor07}" />
            </StackLayout>
        </Frame>
    </Grid>
    
</ContentPage>